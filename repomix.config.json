{
  "output": {
    "filePath": "ml4t-backtest-review.xml",
    "style": "xml"
  },
  "include": [
    "src/**/*.py",
    "examples/integrated/*.py",
    "*.md",
    "pyproject.toml"
  ],
  "ignore": {
    "useGitignore": false,
    "useDefaultPatterns": false,
    "customPatterns": [
      "tests/**",
      "**/__pycache__/**",
      "**/*.pyc",
      ".venv/**",
      "*.egg-info/**",
      ".pytest_cache/**",
      "examples/integrated/data/**",
      "docs/sphinx/build/**",
      ".git/**"
    ]
  }
}
